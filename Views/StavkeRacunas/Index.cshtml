@model IEnumerable<Fiskal.Model.StavkeRacuna>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kolicina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cijena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artikl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Racun)
            </th>
            <th></th>
        </tr>
